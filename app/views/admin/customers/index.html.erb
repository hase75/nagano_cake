<h1>会員一覧</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><% if customer.is_deleted? %>
                <span>有効</span>
              <% else %>
                <span>退会</span>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>