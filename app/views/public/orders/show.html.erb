<h1>注文履歴詳細</h1>
  <h4>注文情報</h4>
    <table>
      <thead>
        <th>注文日</th>
        <th>配送先</th>
        <th>支払方法</th>
        <th>ステータス</th>
      </thead>
      <tbody>
        <tr>
          <td><%= @order_detail.order.created_at %></td>
          <td><%= @order_detail.order.address %></td>
          <td><%= @order_detail.order.payment_method %></td>
          <td><%= @order_detail.order.status %></td>
        </tr>
      </tbody>
    </table>
    
    <h4>注文内容</h4>
    <table>
      <thead>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </thead>
      <tbody>
        <tr>
          <td><%= @order_detail.item.name %></td>
          <td><%= @order_detail.item.with_tax_price %></td>
          <td><%= @order_detail.amount %></td>
          <td><%= @order_detail.subtotal %></td>
        </tr>
      </tbody>
    </table>
    
  <h4>請求情報</h4>
    <table>
      <thead>
        <th>商品合計</th>
        <th>配送料</th>
        <th>請求情報</th>
      </thead>
      <tbody>
        <tr>
          <% @total_price +=  cart_item.subtotal %>
  　　    　<td><%= @order_detai@total_priceme %></td>
          <td><%= @order_detail.order.shipping_cost %></td>
          <td><%= @order_detail.order.total_payment %></td>
        </tr>
      </tbody>
    </table>
