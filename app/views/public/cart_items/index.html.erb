<div class="container my-5">
  
    <div class="row">
      <div class="offset-1">
        <h4 class="red-border px-3 pb-1">ショッピングカート</h4>
      </div>
      <div class="ml-auto">
        <%= link_to "カートを空にする", cart_items_destroy_all_path,method: :delete,"data-confirm" => "全て空にしますか？", class: "btn btn-sm btn-danger" %>
      </div>
    </div>
    
    <div class="row mt-5">
      <div class="offset-1 col-9">
        <table class="table table-bordered border-dark">
          <thead>
            <tr class="red-border">
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th colspan="1"></th>
            </tr>
          </thead>
          
          <% @cart_items.each do |cart_item| %>
            <tbody>
              <tr class="brown-border">
                <td class="align-middle">
                  <%= image_tag cart_item.item.get_image %>
                <span> </span>
                  <%= cart_item.item.name %>
                </td>
                <td class="align-middle"><%= cart_item.item.with_tax_price %></td>
                <td class="align-middle">
                  <%= form_with model: cart_item do |f| %>
                    <%= f.select :amount, *[1..10] %>
                    <%= f.submit '変更' %>
                  <% end %>
                </td>
                <td class="align-middle"><%= cart_item.subtotal %></td>
                <td class="align-middle"><%= link_to "削除する", cart_item_path(cart_item.id),method: :delete,"data-confirm" => "Are you sure?", class: "btn btn-sm btn-danger" %></td>
              </tr>
                <% @total_price +=  cart_item.subtotal %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      
      <div class="row my-3">
        <div class="offset-9">
          <strong class="red-border px-3 pb-1">合計金額 <%= @total_price %>円</strong>
        </div>
      </div>
          
      <div class="row">
        <div class="offset-1 col-2">
          <%= link_to "買い物を続ける", items_path, class: "btn btn-outline-danger mt-5" %>
        </div>
        <% if @cart_items != [] %>
        <div class="offset-6">
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-outline-danger mt-5" %>
        <% end %>
        </div>
      </div>
</div>