<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", destroy_all_cart_items_path,method: :delete,"data-confirm" => "全て空にしますか？" %>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item.id),method: :delete,"data-confirm" => "Are you sure?"  %></td>
      <% @total_price +=  cart_item.subtotal %>
    </tr>
  <% end %>
  </tbody>
</table>

